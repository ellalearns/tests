<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2a30">

    <ImageView
        android:id="@+id/backButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_white" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="340dp"
        android:text="OTP Verification"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="300dp"
        android:layout_height="19dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="19dp"
        android:text="Enter the OTP sent to your email address"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="291dp"
        android:layout_height="50dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#ef6820"
        android:text="Verify"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="150dp"
        android:layout_height="17dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="60dp"
        android:text="Didn't receive the OTP?"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyButton" />

    <TextView
        android:id="@+id/resendOtpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="125dp"
        android:text="Resend"
        android:textColor="#ef6820"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyButton" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="number"
        android:textColor="#242424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="number"
        android:textColor="#242424"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="number"
        android:textColor="#242424"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber2"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <EditText
        android:id="@+id/editTextNumber4"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="number"
        android:textColor="#242424"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber3"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />
</androidx.constraintlayout.widget.ConstraintLayout>